{
  "name": "safety-intelligence-engine",
  "version": "1.0.0",
  "description": "Risk-Based Safety Intelligence Platform",
  "main": "dist/main/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "npm run build:all && concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build": "npm run build:renderer && npm run build:main",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "tsx src/db/seed.ts",
    "typecheck": "tsc --noEmit",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "build:all": "npx tsc -p tsconfig.main.json && vite build",
    "setup": "npm install && npx prisma generate && npx prisma migrate dev && npx tsx src/db/seed.ts" 
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "@supabase/supabase-js": "^2.39.3",
    "better-sqlite3": "^9.2.2",
    "date-fns": "^3.0.6",
    "docx": "^8.5.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.263.1",
    "papaparse": "^5.4.1",
    "puppeteer": "^21.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "prisma": "^6.17.1",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^5.0.12",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.safetyintel.app",
    "productName": "Safety Intelligence Engine",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "database/schema.sql",
      "templates/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
