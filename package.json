{
  "name": "safety-intelligence-engine",
  "version": "1.0.0",
  "description": "Risk-Based Safety Intelligence Platform",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "better-sqlite3": "^9.2.2",
    "date-fns": "^3.0.6",
    "docx": "^8.5.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.263.1",
    "papaparse": "^5.4.1",
    "puppeteer": "^21.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.12",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.safetyintel.app",
    "productName": "Safety Intelligence Engine",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "database/schema.sql",
      "templates/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
